{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"noImplicitAny": false,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
